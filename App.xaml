<Application x:Class="PhotonViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:PhotonViewer.Views"
             StartupUri="Views/MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <!-- Value Converters -->
            <views:BooleanToVisibilityConverter x:Key="BoolToVisibility" />
            <views:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibility" />
            
            <!-- Global Font -->
            <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
            
            <!-- Scrollbar Style for Dark Theme -->
            <Style TargetType="ScrollBar">
                <Setter Property="Background" Value="#252526" />
            </Style>
            
            <!-- ProgressBar Style -->
            <Style TargetType="ProgressBar">
                <Setter Property="Background" Value="#3F3F46" />
                <Setter Property="Foreground" Value="#007ACC" />
                <Setter Property="BorderThickness" Value="0" />
            </Style>
            
            <!-- Slider Thumb Style -->
            <Style TargetType="Slider">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Slider">
                            <Grid>
                                <Track x:Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="Slider.DecreaseLarge" 
                                                      Background="#007ACC"
                                                      BorderThickness="0"
                                                      Height="4" />
                                    </Track.DecreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb Width="14" Height="14">
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Ellipse Fill="#FFFFFF" 
                                                             Width="14" Height="14" />
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="Slider.IncreaseLarge"
                                                      Background="#3F3F46"
                                                      BorderThickness="0"
                                                      Height="4" />
                                    </Track.IncreaseRepeatButton>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
