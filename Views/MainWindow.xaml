<Window x:Class="PhotonViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PhotonViewer.ViewModels"
        xmlns:controls="clr-namespace:PhotonViewer.Views.Controls"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Width="1400" Height="900"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        AllowDrop="True"
        Drop="OnFileDrop"
        DragOver="OnDragOver"
        KeyDown="OnKeyDown">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <!-- Dark Theme Colors -->
        <Color x:Key="BackgroundDark">#1E1E1E</Color>
        <Color x:Key="BackgroundMedium">#252526</Color>
        <Color x:Key="BackgroundLight">#2D2D30</Color>
        <Color x:Key="BorderColor">#3F3F46</Color>
        <Color x:Key="AccentColor">#007ACC</Color>
        <Color x:Key="TextPrimary">#FFFFFF</Color>
        <Color x:Key="TextSecondary">#9D9D9D</Color>
        
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}" />
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}" />
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}" />
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
        
        <!-- Button Style -->
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" 
                                        Value="{StaticResource BackgroundLightBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" 
                                        Value="{StaticResource AccentBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        
        <!-- Slider Style -->
        <Style x:Key="ZoomSlider" TargetType="Slider">
            <Setter Property="Minimum" Value="0.1" />
            <Setter Property="Maximum" Value="10" />
            <Setter Property="Width" Value="150" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <!-- Info Label Style -->
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <!-- Value Label Style -->
        <Style x:Key="ValueLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenFileCommand}" />
        <KeyBinding Key="Left" Command="{Binding PreviousImageCommand}" />
        <KeyBinding Key="Right" Command="{Binding NextImageCommand}" />
        <KeyBinding Key="Add" Command="{Binding ZoomInCommand}" />
        <KeyBinding Key="Subtract" Command="{Binding ZoomOutCommand}" />
        <KeyBinding Key="D0" Modifiers="Ctrl" Command="{Binding ZoomToFitCommand}" />
        <KeyBinding Key="D1" Modifiers="Ctrl" Command="{Binding ZoomToActualSizeCommand}" />
        <KeyBinding Key="I" Command="{Binding ToggleInfoPanelCommand}" />
        <KeyBinding Key="Delete" Command="{Binding DeleteCurrentImageCommand}" />
    </Window.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />     <!-- Toolbar -->
            <RowDefinition Height="*" />       <!-- Main Content -->
            <RowDefinition Height="32" />      <!-- Status Bar -->
        </Grid.RowDefinitions>
        
        <!-- Top Toolbar -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid Margin="8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />  <!-- File Operations -->
                    <ColumnDefinition Width="*" />     <!-- Spacer -->
                    <ColumnDefinition Width="Auto" />  <!-- Navigation -->
                    <ColumnDefinition Width="*" />     <!-- Spacer -->
                    <ColumnDefinition Width="Auto" />  <!-- Zoom Controls -->
                </Grid.ColumnDefinitions>
                
                <!-- File Operations -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding OpenFileCommand}"
                            ToolTip="Open File (Ctrl+O)"
                            Content="&#xE8E5;" />
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding OpenFolderCommand}"
                            ToolTip="Open Folder"
                            Content="&#xE838;" />
                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="8,8" />
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding DeleteCurrentImageCommand}"
                            ToolTip="Delete (Del)"
                            Content="&#xE74D;" />
                </StackPanel>
                
                <!-- Navigation Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding PreviousImageCommand}"
                            ToolTip="Previous (←)"
                            Content="&#xE76B;" />
                    <TextBlock Style="{StaticResource ValueLabel}" 
                               Text="{Binding NavigationText}"
                               MinWidth="80"
                               TextAlignment="Center"
                               Margin="8,0" />
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding NextImageCommand}"
                            ToolTip="Next (→)"
                            Content="&#xE76C;" />
                </StackPanel>
                
                <!-- Zoom Controls -->
                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding ZoomOutCommand}"
                            ToolTip="Zoom Out (-)"
                            Content="&#xE71F;" />
                    <Slider Style="{StaticResource ZoomSlider}"
                            Value="{Binding ZoomLevel, Mode=TwoWay}" />
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding ZoomInCommand}"
                            ToolTip="Zoom In (+)"
                            Content="&#xE8A3;" />
                    <TextBlock Style="{StaticResource ValueLabel}" 
                               Text="{Binding ZoomPercentText}"
                               MinWidth="50"
                               Margin="8,0,0,0" />
                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="8,8" />
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding ZoomToFitCommand}"
                            ToolTip="Fit to Window (Ctrl+0)"
                            Content="&#xE9A6;" />
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding ZoomToActualSizeCommand}"
                            ToolTip="Actual Size (Ctrl+1)"
                            Content="&#xE740;" />
                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="8,8" />
                    <Button Style="{StaticResource IconButton}" 
                            Command="{Binding ToggleInfoPanelCommand}"
                            ToolTip="Toggle Info Panel (I)"
                            Content="&#xE946;" />
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <!-- Image Viewer Canvas -->
            <controls:SkiaImageViewer x:Name="ImageViewer"
                                       Grid.Column="0"
                                       DecodedImage="{Binding CurrentImage}"
                                       ZoomLevel="{Binding ZoomLevel, Mode=TwoWay}"
                                       FrameTime="{Binding FrameTimeMs, Mode=OneWayToSource}"
                                       Focusable="True" />
            
            <!-- Loading Overlay -->
            <Border Grid.Column="0"
                    Background="#80000000"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="200" Height="4"
                                 Background="{StaticResource BackgroundLightBrush}"
                                 Foreground="{StaticResource AccentBrush}" />
                    <TextBlock Text="Loading..." 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
            
            <!-- Drop Hint Overlay -->
            <Border Grid.Column="0"
                    x:Name="DropHint"
                    Background="#90000000"
                    Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="&#xE896;" 
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="64"
                               Foreground="{StaticResource AccentBrush}" />
                    <TextBlock Text="Drop image here" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="18"
                               Margin="0,16,0,0" />
                </StackPanel>
            </Border>
            
            <!-- Empty State -->
            <StackPanel Grid.Column="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding HasImage, Converter={StaticResource InverseBoolToVisibility}}">
                <TextBlock Text="&#xE8B9;" 
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="72"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" />
                <TextBlock Text="No image loaded" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="16"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Press Ctrl+O to open or drag and drop" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center" />
            </StackPanel>
            
            <!-- Info Panel (Right Side) -->
            <Border Grid.Column="1"
                    Width="280"
                    Background="{StaticResource BackgroundMediumBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Visibility="{Binding ShowInfoPanel, Converter={StaticResource BoolToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- File Info -->
                        <TextBlock Text="FILE INFO" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12" />
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="24" />
                                <RowDefinition Height="24" />
                                <RowDefinition Height="24" />
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}" Text="Filename" Margin="0" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueLabel}" 
                                       Text="{Binding CurrentImageInfo.FileName, FallbackValue='-'}"
                                       TextTrimming="CharacterEllipsis" />
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}" Text="Resolution" Margin="0" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource ValueLabel}" 
                                       Text="{Binding ImageResolutionText}" />
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}" Text="File Size" Margin="0" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource ValueLabel}" 
                                       Text="{Binding FileSizeText}" />
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoLabel}" Text="Format" Margin="0" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource ValueLabel}" 
                                       Text="{Binding CurrentImage.Format, FallbackValue='-'}" />
                        </Grid>
                        
                        <!-- Separator -->
                        <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,20" />
                        
                        <!-- Performance -->
                        <TextBlock Text="PERFORMANCE" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12" />
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="24" />
                                <RowDefinition Height="24" />
                                <RowDefinition Height="24" />
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource InfoLabel}" Text="Load Time" Margin="0" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueLabel}"
                                       Text="{Binding LoadTimeMs, StringFormat={}{0:F1} ms}" />
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource InfoLabel}" Text="Frame Time" Margin="0" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource ValueLabel}"
                                       Text="{Binding FrameTimeMs, StringFormat={}{0:F2} ms}" />
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource InfoLabel}" Text="Memory" Margin="0" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource ValueLabel}"
                                       Text="{Binding MemoryUsageText}" />
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource InfoLabel}" Text="Cache" Margin="0" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource ValueLabel}"
                                       Text="{Binding CacheUsageText}" />
                        </Grid>
                        
                        <!-- Cache Clear Button -->
                        <Button Content="Clear Cache"
                                Style="{StaticResource ToolbarButton}"
                                Command="{Binding ClearCacheCommand}"
                                HorizontalAlignment="Left"
                                Margin="0,16,0,0"
                                Padding="16,8"
                                Background="{StaticResource BackgroundLightBrush}" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource BackgroundMediumBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Error Message -->
                <TextBlock Grid.Column="0"
                           Style="{StaticResource InfoLabel}"
                           Foreground="#FF6B6B"
                           Text="{Binding ErrorMessage}"
                           VerticalAlignment="Center"
                           Margin="0" />
                
                <!-- Quick Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Style="{StaticResource InfoLabel}" 
                               Text="{Binding ZoomPercentText}" />
                    <TextBlock Style="{StaticResource InfoLabel}" Text="|" />
                    <TextBlock Style="{StaticResource InfoLabel}" 
                               Text="{Binding ImageResolutionText}" />
                    <TextBlock Style="{StaticResource InfoLabel}" Text="|" />
                    <TextBlock Style="{StaticResource InfoLabel}"
                               Text="{Binding FrameTimeMs, StringFormat={}{0:F1} ms}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
